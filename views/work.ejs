<%- include("partials/header.ejs") %>
<div class="container p-5">
    <div class="col-lg-6 mx-auto p-4 py-md-5 mt-5 bg-dark rounded shadow">
        <main class="px-5">

            <h1 class="text-light">Work Todo List</h1>
            <p class="text-light"><%= date %></p>

            <form action="/submit" method="POST">
                <div class="input-group mb-3 row">
                    <label for="fname" class="text-light mb-2">Add a work task:</label><br>
                    <input type="text" class="form-control mx-2 rounded" placeholder="My work task" aria-label="Task" id="task" name="task">
                    <div class="input-group-append mt-2">
                        <input type="hidden" name="taskType" value="work" class="rounded">
                        <input type="submit" value="Add Work Task" class="btn btn-success btn-block w-100 shadow-sm">
                    </div>
                </div>
            </form>

            <% if (locals.workTaskList) { %>
                <div class="list-group">
                    <% workTaskList.forEach((task, index) => { %>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <input type="checkbox" class="task-checkbox mr-2" id="task-<%= index %>">
                            <label for="task-<%= index %>" class="mb-0"><%= task.name %></label>
                        </div>
                    <% }); %>
                </div>
            <% }; %>
        </main>
    </div>
</div>
<%- include("partials/footer.ejs") %>